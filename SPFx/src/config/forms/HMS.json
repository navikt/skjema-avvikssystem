{
    "title": "HMS",
    "conditionalOptions": {
        "Vold, trusler og trakassering som følge av kontakt med tredjepart": [
            "Truende atferd/trussel",
            "Trussel om selvskading/ selvdrap",
            "Verbal utskjelling",
            "Sjikane/trakasering",
            "Emosjonell/relasjonell belastning",
            "Uønsket kontakt, adferd eller kommunikasjon",
            "Fysisk angrep på person",
            "Brudd på utestengelsesvedtak",
            "Hatytringer",
            "Annet"
        ],
        "Organisatoriske og psykososiale forhold": [
            "Arbeidsbelastning",
            "Brudd på lov, forskrifter og rutiner",
            "Mestring",
            "Mellommenneskelige forhold",
            "Involvering, medvirkning og medbestemmelse",
            "Informasjon og opplæring",
            "Organisering og tilrettelegging av arbeidet",
            "Manglende risikovurdering",
            "Konflikter, mobbing og trakassering",
            "Annet"
        ],
        "Fysiske arbeidsmiljøforhold": [
            "Inneklima (temperatur, lys, støv)",
            "Ergonomiske forhold ved eller på arbeidsplassen",
            "Støy",
            "Annet"
        ],
        "Ytre miljø/forurensing": [
            "Skadelig utslipp til miljø",
            "Annet"
        ]
    },
    "description": {
        "type": "html",
        "content": "<div style='padding: 5px 10px'> <h3 style='margin-left: 15px'>Kategorier</h3> <ul> <li>Vold, trusler og trakassering som følge av kontakt med tredjepart</li> <li>Organisatoriske og psykososiale forhold</li> <li>Fysiske arbeidsmiljøforhold</li> <li>Kjemiske og biologiske faktorer</li> <li>Ytre miljø/forurensing</li> <li>Nesten ulykke/ personskade</li> <li>Andre uønskede hendelser</li> </ul> </div>"
    },
    "pages": [
        {
            "key": 1,
            "title": "Er du statlig eller kommunalt ansatt?",
            "type": "Info",
            "content": "Du er registrert som <strong>{0}</strong> ansatt. Stemmer dette med din stilling?",
            "format": [
                "context.organization"
            ],
            "actions": [
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.stateOrMunicipality",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 2,
            "type": "Input",
            "title": "Hvilken kategori er denne hendelsen innenfor?",
            "fields": [
                {
                    "key": "category",
                    "type": "ChoiceGroup",
                    "options": [
                        "Vold, trusler og trakassering som følge av kontakt med tredjepart",
                        "Organisatoriske og psykososiale forhold",
                        "Fysiske arbeidsmiljøforhold",
                        "Kjemiske og biologiske faktorer",
                        "Ytre miljø/forurensing",
                        "Nesten ulykke/ personskade",
                        "Andre uønskede hendelser"
                    ],
                    "choiceInfoTexts": [
                        {
                            "key": "Organisatoriske og psykososiale forhold",
                            "text": "Avvik eller uønskede hendelser som handler om arbeidets organisering, arbeidsinnhold og de sosiale relasjonene på arbeidsplassen og som påvirker de ansattes jobbtilfredshet, jobbengasjement og arbeidshelse (Stami)"
                        },
                        {
                            "key": "Fysiske arbeidsmiljøforhold",
                            "text": "Inneklima, støy, ergonomiske forhold eller fysiske eksponeringer som kan gi helseskade"
                        }
                    ],
                    "required": "true"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.category",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 3,
            "type": "Input",
            "title": "For å behandle innsendelsen på riktig måte trengs det noe mer detaljer rundt type hendelse:",
            "fields": [
                {
                    "key": "categoryDetails",
                    "type": "ChoiceGroup",
                    "options": "form.conditionalOptions[state.values.category]",
                    "required": "form.conditionalOptions[state.values.category]",
                    "hidden": "!(form.conditionalOptions[state.values.category])"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.categoryDetails",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 4,
            "type": "Input",
            "fields": [
                {
                    "key": "unit",
                    "label": "Hvilken enhet gjelder hendelsen/avviket?",
                    "type": "ChoiceGroup",
                    "options": [
                        "Min enhet",
                        "Annen enhet"
                    ],
                    "required": "true"
                },
                {
                    "key": "unitOther",
                    "label": "Hvis annen enhet: Velg enhet",
                    "type": "Choice",
                    "options": [
                        "Enhet 1",
                        "Enhet 2"
                    ],
                    "hidden": "!(state.values.unit === 'Annen enhet')",
                    "required": "state.values.unit === 'Annen enhet'"
                },
                {
                    "key": "location",
                    "label": "Hvor skjedde hendelsen?",
                    "type": "Choice",
                    "options": [
                        "Telefon",
                        "Modia/e-post/brev",
                        "I publikumsmottak",
                        "Samtalerom",
                        "Chat",
                        "Utenfor NAV's lokale/ offentlig sted",
                        "SMS/Sosiale medier",
                        "Anonyme tilbakemeldingskanaler",
                        "Medarbeiders private område",
                        "Brukers private bopel",
                        "Annet"
                    ],
                    "hidden": "state.values.category !== 'Vold, trusler og trakassering som følge av kontakt med tredjepart'",
                    "required": "state.values.category === 'Vold, trusler og trakassering som følge av kontakt med tredjepart'"
                },
                {
                    "key": "locationDetails",
                    "label": "Du valgte \"Annet\". Vennligst spesifiser: ",
                    "type": "Text",
                    "multiline": "true",
                    "hidden": "!(state.values.location === 'Annet')",
                    "required": "state.values.location === 'Annet'"
                },
                {
                    "key": "timeOfIncident",
                    "label": "Når skjedde hendelsen?",
                    "type": "Date",
                    "required": "true"
                },
                {
                    "key": "incidentDescription",
                    "label": "Hva har skjedd?",
                    "description": "Beskriv hendelsen, mulig årsak og eventuelle konsekvenser",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "imediateMeasuresDescription",
                    "label": "Beskriv eventuelle iverksatte strakstiltak:",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "measureSuggestionsDescription",
                    "label": "Har du forslag til tiltak for å unngå at noe slikt skjer igjen?",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "notifiedOfIncident",
                    "label": "Har du varslet noen andre om denne hendelsen?",
                    "type": "Choice",
                    "options": [
                        "Verneombud",
                        "Politi",
                        "AMK",
                        "Brannvesen",
                        "Andre offentlige samarbeids- partnere",
                        "Partnerskap",
                        "Andre virksomheter i bygget",
                        "Kommunikasjonsansvarlige",
                        "Annet"
                    ],
                    "required": "true"
                },
                {
                    "key": "othersNotifiedDescription",
                    "label": "Du valgte \"annet\". Vennligst spesifiser:",
                    "type": "Text",
                    "multiline": "true",
                    "hidden": "!(state.values.notifiedOfIncident === 'Annet')",
                    "required": "state.values.notifiedOfIncident === 'Annet'"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.valid",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 5,
            "title": "Ønsker du å registrere følgende opplysninger om hendelsen?",
            "type": "Summary",
            "values": "state.values",
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "submit",
                    "label": "Send inn",
                    "type": "primary",
                    "invoke": {
                        "functionName": "Submit",
                        "params": {
                            "state_values": "values"
                        }
                    }
                }
            ]
        }
    ]
}