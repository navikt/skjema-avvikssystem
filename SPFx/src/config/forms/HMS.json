{
    "title": "HMS",
    "conditionalOptions": {
        "Vold, trusler og trakassering fra bruker eller andre utenfor NAV": [
            "Truende atferd/trussel",
            "Trussel om selvskading/ selvdrap",
            "Verbal utskjelling",
            "Sjikane/trakasering",
            "Emosjonell/relasjonell belastning",
            "Uønsket kontakt, adferd eller kommunikasjon",
            "Fysisk angrep på person",
            "Brudd på utestengelsesbeslutning",
            "Hatytringer",
            "Annet"
        ],
        "Organisatoriske og psykososiale arbeidsmiljøforhold": [
            "Arbeidsbelastning",
            "Mestring, informasjon og opplæring",
            "Mellommenneskelige og sosiale forhold",
            "Involvering, medvirkning og medbestemmelse",
            "Organisering og tilrettelegging av arbeidet",
            "Brudd på lov, forskrifter og rutiner",
            "Annet"
        ],
        "Fysiske arbeidsmiljøforhold": [
            "Inneklima (temperatur, lys, støv)",
            "Ergonomiske forhold ved eller på arbeidsplassen",
            "Støy",
            "Annet"
        ]
    },
    "description": {
        "type": "html",
        "content": "<div style='padding: 5px 10px'> <h3 style='margin-left: 15px'>Kategorier</h3> <ul> <li>Vold, trusler og trakassering fra bruker eller andre utenfor NAV</li> <li>Organisatoriske og psykososiale arbeidsmiljøforhold</li> <li>Fysiske arbeidsmiljøforhold</li> <li>Kjemiske og biologiske faktorer</li> <li>Nestenulykke/ personskade</li> <li>Andre uønskede hendelser</li> </ul> </div>"
    },
    "pages": [
        {
            "key": 1,
            "type": "Info",
            "content": "Du er registrert som <strong>{0}</strong> ansatt. Stemmer dette med din stilling?",
            "format": [
                "context.organization"
            ],
            "confirmation": {
                "required": "true",
                "field": {
                    "key": "orgConfirmation",
                    "type": "ChoiceGroup",
                    "options": [
                        "Ja",
                        "Nei"
                    ]
                }
            },
            "messages": [
                {
                    "display": "state.values.orgConfirmation === 'Nei'",
                    "type": "info",
                    "content": "Vennligst kontakt din leder for å rette din registrerte stilling."
                },
                {
                    "display": "state.values.stateOrMunicipality !== 'Statlig' && state.values.orgConfirmation === 'Ja'",
                    "type": "info",
                    "content": "For øyeblikket kan kun statlig ansatte rapportere HMS-avvik."
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "ToFormSelection"
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "(!state.values.stateOrMunicipality || state.values.orgConfirmation !== 'Ja') || state.values.stateOrMunicipality !== 'Statlig'",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 2,
            "type": "Input",
            "title": "Velg kategori",
            "fields": [
                {
                    "key": "category",
                    "type": "ChoiceGroup",
                    "options": [
                        "Vold, trusler og trakassering fra bruker eller andre utenfor NAV",
                        "Organisatoriske og psykososiale arbeidsmiljøforhold",
                        "Fysiske arbeidsmiljøforhold",
                        "Kjemiske og biologiske faktorer",
                        "Nestenulykke/ personskade",
                        "Andre uønskede hendelser"
                    ],
                    "choiceInfoTexts": [
                        {
                            "key": "Vold, trusler og trakassering fra bruker eller andre utenfor NAV",
                            "text": "Hendelser der medarbeideren blir trakassert, truet, utskjelt eller angrepet i sin arbeidssituasjon, og som innebærer en åpenlys eller antydet trussel mot deres sikkerhet og velvære eller helse."
                        },
                        {
                            "key": "Organisatoriske og psykososiale arbeidsmiljøforhold",
                            "text": "Handler om arbeidets organisering, arbeidsinnhold og de sosiale relasjonene på arbeidsplassen."
                        },
                        {
                            "key": "Fysiske arbeidsmiljøforhold",
                            "text": "Handler om forhold som påvirker ansatte enten indirekte via egenskaper ved arbeidsplassen og arbeidsredskapene, eller direkte ved bruk av kroppen. Den indirekte påvirkningen kan være fysiske faktorer som for eksempel stråling, støy, vibrasjoner, varme eller kulde."
                        },
                        {
                            "key": "Kjemiske og biologiske faktorer",
                            "text": "Eksponeringer for kjemiske og biologiske faktorer som kan gi helseskade, som for eksempel rengjøringsmidler, oljer, desinfiksjonsmidler, eksos, virus og bakterier."
                        },
                        {
                            "key": "Ytre miljø/forurensing",
                            "text": "Forurensing fra virksomheten til luft, vann og jord."
                        },
                        {
                            "key": "Nestenulykke/ personskade",
                            "text": "Plutselig eller uventa hendelse man utsettes for i arbeidet. Ved melding av avvik på andre kategorier vil leder sammen med medarbeider ta stilling til om hendelsen kan gi personskade på kort eller lang sikt."
                        },
                        {
                            "key": "Andre uønskede hendelser",
                            "text": "Andre faktorer eller hendelser som kan gi helseskade på sikt, og bør forbedres."
                        }
                    ],
                    "required": "true"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.category",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "addtobreadcrumbs": "state.values.category"
                }
            ]
        },
        {
            "key": 3,
            "type": "Input",
            "title": "Velg underkategori",
            "fields": [
                {
                    "key": "categoryDetails",
                    "type": "ChoiceGroup",
                    "options": "form.conditionalOptions[state.values.category]",
                    "required": "form.conditionalOptions[state.values.category]",
                    "hidden": "!(form.conditionalOptions[state.values.category])",
                    "choiceInfoTexts": [
                        {
                            "key": "Truende atferd/trussel",
                            "text": "Kan være ikke-verbal truende oppførsel, eller verbal trussel. Eksempel på ikke-verbal truende oppførsel er å vise knyttneven, gi fingeren. Eksempel på verbal trussel kan være «jeg vet hvor du bor» eller «jeg skal bombe dere»."
                        },
                        {
                            "key": "Trussel om selvskading/ selvdrap",
                            "text": "Eksempler på trussel om selvskading eller selvdrap er hvor bruker sier eller antyder skade eller drap på seg selv eller andre i nære relasjoner"
                        },
                        {
                            "key": "Verbal utskjelling",
                            "text": "Ytringer med spesielt negativt innhold, skremmende og kraftfulle utsagn som oppleves belastende for den ansatte eller for arbeidsmiljøet på kortere eller lengre sikt."
                        },
                        {
                            "key": "Sjikane/trakasering",
                            "text": "Personlig hetsing og ærekrenkende utsagn, eller å snakke nedsettende om en person om personlige forhold. Dette kan være å snakke nedlatende om ansattes funksjonsevne, religion, hudfarge, nasjonale eller etniske opprinnelse, kjønn, seksuell legning og kjønnsidentitet, leveform eller politisk orientering."
                        },
                        {
                            "key": "Emosjonell/relasjonell belastning",
                            "text": "Dette handler de emosjonelle kravnene ansatte må forholde seg til i jobbsammenheng i møte med andre, og/eller at man må skjule egne negative følelser og opplevelse av hendelser. Dette kan være i møte med sterke følelser (sinne, sorg osv), eller en opplevelse av følelsesmessig belastning og omsorgstrøtthet over tid."
                        },
                        {
                            "key": "Uønsket kontakt, adferd eller kommunikasjon",
                            "text": "For eks at bruker ringer eller kontaker deg privat"
                        },
                        {
                            "key": "Fysisk angrep på person",
                            "text": "Fysisk angrep på personer, egne ansatte, brukere eller andre."
                        },
                        {
                            "key": "Hatytringer",
                            "text": "Hatytringer er krenkende eller fiendtlige ytringer som retter seg mot NAV som sådan, gjerne anonymt, via en av etatens tilbakemeldingskanaler.  Meldingene kommer inn via nav.no, hotjar eller andre tilbakemeldingskanaler."
                        },
                        {
                            "key": "Arbeidsbelastning",
                            "text": "For eksempel for mange oppgaver og/eller brukere å følge opp, motstridende krav, manglende prioriteringer, stadig opplæring av nye mm."
                        },
                        {
                            "key": "Mestring, informasjon og opplæring",
                            "text": "Kan være manglende opplæring i forbindelse med fag, roller og/eller systemer eller mangelfull informasjon i forbindelse med endringer."
                        },
                        {
                            "key": "Mellommenneskelige og sosiale forhold",
                            "text": "Begynnende konflikt, uro i arbeidsmiljøet"
                        },
                        {
                            "key": "Involvering, medvirkning og medbestemmelse",
                            "text": "Kan være manglende involvering, medvirkning og medbestemmelse i omstillings- og endringsprosesser og/eller at MBA og AMU ikke fungerer etter lov- og avtaleverk sine bestemmelser."
                        },
                        {
                            "key": "Organisering og tilrettelegging av arbeidet",
                            "text": "Manglende prioritering, ikke få tilrettelegging, ikke benyttet handlingsrommet i en hybrid arbeidshverdag"
                        },
                        {
                            "key": "Brudd på lov, forskrifter og rutiner",
                            "text": "Kan være brudd på arbeidsmiljøloven, som manglende risikovurdering eller brudd på overtidsbestemmelsene. Det kan være brudd på interne HMS-rutiner, som manglende oppfølging etter alvorlige hendelser."
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "removefrombreadcrumbs": "state.values.category"
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.categoryDetails",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "addtobreadcrumbs": "state.values.categoryDetails"
                }
            ]
        },
        {
            "key": 4,
            "type": "Input",
            "fields": [
                {
                    "key": "unit",
                    "label": "Hvilken enhet gjelder hendelsen?",
                    "type": "ChoiceGroup",
                    "options": [
                        "Min enhet",
                        "Annen enhet"
                    ],
                    "required": "true",
                    "defaultValue": "Min enhet",
                    "disabledOptions": [
                        "Annen enhet"
                    ],
                    "additionalData": [
                        {
                            "key": "Min enhet",
                            "value": "context.unit"
                        }
                    ]
                },
                {
                    "key": "unitOther",
                    "label": "Hvis annen enhet: Velg enhet",
                    "type": "Choice",
                    "options": [
                        "Enhet 1",
                        "Enhet 2"
                    ],
                    "hidden": "!(state.values.unit === 'Annen enhet')",
                    "required": "state.values.unit === 'Annen enhet'"
                },
                {
                    "key": "location",
                    "label": "Hvor skjedde hendelsen?",
                    "type": "Choice",
                    "options": [
                        "Telefon/SMS",
                        "Modia/e-post/brev",
                        "Publikumsmottak",
                        "Samtalerom",
                        "Chat",
                        "Utenfor NAV's lokale/ offentlig sted",
                        "Sosiale medier",
                        "Anonyme tilbakemeldingskanaler",
                        "Medarbeiders private område",
                        "Brukers private bopel/hjemme hos bruker",
                        "Annet"
                    ],
                    "hidden": "state.values.category !== 'Vold, trusler og trakassering fra bruker eller andre utenfor NAV'",
                    "required": "state.values.category === 'Vold, trusler og trakassering fra bruker eller andre utenfor NAV'"
                },
                {
                    "key": "locationDetails",
                    "label": "Du valgte \"Annet\". Vennligst spesifiser: ",
                    "type": "Text",
                    "multiline": "true",
                    "hidden": "!(state.values.location === 'Annet')",
                    "required": "state.values.location === 'Annet'"
                },
                {
                    "key": "timeOfIncident",
                    "label": "Når skjedde hendelsen?",
                    "type": "Date",
                    "required": "true"
                },
                {
                    "key": "incidentDescription",
                    "label": "Hva har skjedd?",
                    "description": "Beskriv hendelsen, mulig årsak og eventuelle konsekvenser",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "imediateMeasuresDescription",
                    "label": "Beskriv eventuelle iverksatte strakstiltak:",
                    "type": "Text",
                    "multiline": "true"
                },
                {
                    "key": "measureSuggestionsDescription",
                    "label": "Har du forslag til tiltak for å unngå at noe slikt skjer igjen?",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "notifiedOfIncident",
                    "label": "Har du informert noen andre om denne hendelsen?",
                    "type": "Choice",
                    "multiselect": "true",
                    "options": [
                        "Leder",
                        "AMK",
                        "Politi",
                        "Brannvesen",
                        "Verneombud",
                        "Kommunikasjonsansvarlige",
                        "Andre virksomheter i bygget",
                        "Andre offentlige samarbeidspartnere",
                        "Ingen",
                        "Annet"
                    ],
                    "required": "true"
                },
                {
                    "key": "othersNotifiedDescription",
                    "label": "Du valgte \"annet\". Vennligst spesifiser:",
                    "type": "Text",
                    "multiline": "true",
                    "hidden": "!(state.values.notifiedOfIncident === 'Annet')",
                    "required": "state.values.notifiedOfIncident === 'Annet'"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "removefrombreadcrumbs": "state.values.categoryDetails"
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.valid || !context.unit",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 5,
            "title": "Verifiser opplysningene som er registrert",
            "type": "Summary",
            "values": "state.values",
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "submit",
                    "label": "Send inn",
                    "type": "primary",
                    "invoke": {
                        "functionName": "Submit",
                        "params": {
                            "state_values": "values"
                        }
                    }
                }
            ]
        }
    ]
}