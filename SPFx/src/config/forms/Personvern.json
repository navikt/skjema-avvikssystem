{
    "title": "Personvern",
    "conditionalOptions": {
        "Behandlingsgrunnlag": [
            "Manglende, utilstrekkelig eller feil bruk av behandlingsgrunnlag",
            "Feil bruk av samtykke (ugyldig samtykke)",
            "Overskuddsinformasjon/ innhenting og lagring av flere opplysninger enn nødvendig",
            "Annet"
        ],
        "Registrertes rettigheter": [
            "Rett til informasjon",
            "Rett til informasjon ved automatisering og profilering",
            "Rett til innsyn",
            "Rett til retting og sletting",
            "Rett til begrensning av behandling",
            "Rett til dataportabilitet",
            "Rett til å protestere",
            "Annet"
        ],
        "Databehandleravtaler": [
            "Manglende databehandleravtale",
            "Databehandler følger ikke avtalens instrukser",
            "Annet"
        ],
        "Overføring til tredjeland": [
            "Manglende gyldig overføringsgrunnlag",
            "Manglende tiltak for å sikre tilstrekkelig beskyttelse av personopplysningene",
            "Brudd på NAV's retningslinjer og prinsipper",
            "Annet"
        ],
        "Lagring/sletting": [
            "Det er ikke fastsatt lagringstid",
            "Det er ikke rutiner for sletting/personopplysningene slettes ikke",
            "Annet"
        ],
        "Manglende oversikter, vurderinger og dokumentasjon": [
            "Behandlingen er ikke registrert/oppdatert i Behandlingskatalogen",
            "Ikke gjennomført vurdering av personvernkonsekvenser (PVK)",
            "Tiltak fra vurdering av personvernkonsekvenser ikke fulgt opp",
            "Dokumentasjon av etterlevelseskrav ikke gjennomført",
            "Annet"
        ],
        "Bruk av bilder, lyd- og videoopptak": [
            "Kameraovervåkning på arbeidsplass",
            "Publisering av bilder, lyd- og videoopptak",
            "Annet"
        ],
        "Overvåking/kontroll av ansatte": [
            "Uberettiget innsyn i arbeidstakers e-postkasse, private filer mm.",
            "Ulovlig overvåkning/kontroll av ansatte",
            "Annet"
        ]
    },
    "description": {
        "type": "html",
        "content": "<div style='padding: 5px 10px'> <h3 style='margin-left: 15px'>Kategorier</h3> <ul> <li>Behandlingsgrunnlag</li> <li>Registrertes rettigheter</li> <li>Databehandleravtaler</li> <li>Overføring til tredjeland</li> <li>Lagring/sletting</li> <li>Manglende oversikter, vurderinger og dokumentasjon</li> <li>Bruk av bilder,lyd- og videoopptak</li> <li>Overvåking/kontroll av ansatte</li> <li>Fødselsnummer/biometriske kjennetegn</li> <li>Andre uønskede hendelser</li> </ul> </div>"
    },
    "pages": [
        {
            "key": 1,
            "title": "Gjelder det en statlig eller kommunal tjeneste?",
            "type": "Input",
            "fields": [
                {
                    "key": "stateOrMunicipality",
                    "type": "ChoiceGroup",
                    "options": [
                        "Statlig",
                        "Kommunal",
                        "Vet ikke"
                    ],
                    "required": "true",
                    "choiceInfoTexts": [
                        {
                            "key": "Statlig",
                            "text": "Omfatter statlige arbeids- og velferdstjenester som arbeid, trygd, familie, pensjon, tiltak og hjelpemidler mfl."
                        },
                        {
                            "key": "Kommunal",
                            "text": "Omfatter sosiale tjenester og andre kommunale tjenester i NAV-kontoret"
                        }
                    ]
                }
            ],
            "messages": [
                {
                    "display": "state.values.stateOrMunicipality && state.values.stateOrMunicipality !== 'Statlig'",
                    "type": "info",
                    "content": "For øyeblikket kan kun avvik for statlige tjenester rapporteres."
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "ToFormSelection"
                    }
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.stateOrMunicipality || state.values.stateOrMunicipality !== 'Statlig'",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 2,
            "title": "Velg kategori",
            "type": "Input",
            "fields": [
                {
                    "key": "category",
                    "type": "ChoiceGroup",
                    "options": [
                        "Behandlingsgrunnlag",
                        "Registrertes rettigheter",
                        "Databehandleravtaler",
                        "Overføring til tredjeland",
                        "Lagring/sletting",
                        "Manglende oversikter, vurderinger og dokumentasjon",
                        "Bruk av bilder, lyd- og videoopptak",
                        "Overvåking/kontroll av ansatte",
                        "Fødselsnummer/biometriske kjennetegn",
                        "Andre uønskede hendelser"
                    ],
                    "choiceInfoTexts": [
                        {
                            "key": "Behandlingsgrunnlag",
                            "text": "Brudd knyttet til at all bruk av personopplysninger skal ha et behandlingsgrunnlag for å være lovlig."
                        },
                        {
                            "key": "Registrertes rettigheter",
                            "text": "Brudd knyttet til at NAV har behandlet krav fra bruker eller NAV-ansatt feil eller ikke innenfor lovbestemte tidsfrister."
                        },
                        {
                            "key": "Overføring til tredjeland",
                            "text": "Brudd knyttet til overføring av personopplysninger til tredjeland (land utenfor EU/EØS som ikke er forhåndsgodkjent av EU-kommisjonen)"
                        },
                        {
                            "key": "Lagring/sletting",
                            "text": "Brudd knyttet til at lagringstid ikke er fastsatt eller at personopplysninger lagres lengre enn fastsatt lagringstid."
                        },
                        {
                            "key": "Manglende oversikter, vurderinger og dokumentasjon",
                            "text": "Brudd på krav til dokumentasjon, eks. personvernkonsekvensvurdering, etterlevelseskrav og behandlingskatalog"
                        },
                        {
                            "key": "Fødselsnummer/biometriske kjennetegn",
                            "text": "Ulovlig eller unødvendig bruk av fødselsnummer eller andre biometriske kjennetegn som fingeravtrykk, ansikt- og stemmegjenkjenning, DNA o.l."
                        },
                        {
                            "key": "Andre uønskede hendelser",
                            "text": "Andre personvernbrudd som ikke er kategorisert her eller som faller inn under mer enn en kategori."
                        }
                    ],
                    "required": "true"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "addtobreadcrumbs": "state.values.category"
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.category",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "addtobreadcrumbs": "state.values.category"
                }
            ]
        },
        {
            "key": 3,
            "title": "Velg underkategori",
            "type": "Input",
            "fields": [
                {
                    "key": "categoryDetails",
                    "type": "ChoiceGroup",
                    "options": "form.conditionalOptions[state.values.category]",
                    "required": "form.conditionalOptions[state.values.category]",
                    "hidden": "!(form.conditionalOptions[state.values.category])",
                    "choiceInfoTexts": [
                        {
                            "key": "Feil bruk av samtykke (ugyldig samtykke)",
                            "text": "Samtykke oppfyller ikke særskilte krav til bruk av samtykke eller personopplysninger er blitt brukt utover det som samtykket dekker."
                        },
                        {
                            "key": "Overskuddsinformasjon/ innhenting og lagring av flere opplysninger enn nødvendig",
                            "text": "Det innhentes og lagres flere personopplysninger enn det som dekkes av behandlingsgrunnlaget eller det brukes flere personopplysninger enn det som er nødvendig for behandlingen."
                        },
                        {
                            "key": "Rett til informasjon",
                            "text": "Det er ikke gitt tilstrekkelig informasjon om hvordan personopplysningene behandles, hvilke konsekvenser behandlingen skal ha, hvilke rettigheter registrerte har og hvordan de kan tas i bruk."
                        },
                        {
                            "key": "Rett til informasjon ved automatisering og profilering",
                            "text": "Brudd på retten til særskilt informasjon om helautomatisert behandling og bruk av profilering."
                        },
                        {
                            "key": "Rett til innsyn",
                            "text": "Bruker eller NAV-ansatt får ikke tilstrekkelig innsyn i egne personopplysninger og informasjon om hva personopplysningene brukes til."
                        },
                        {
                            "key": "Rett til retting og sletting",
                            "text": "Bruker eller NAV-ansatt får ikke rettet eller slettet uriktig personopplysninger."
                        },
                        {
                            "key": "Rett til begrensning av behandling",
                            "text": "Bruker eller NAV-ansatt får ikke stanset bruk av personopplysninger."
                        },
                        {
                            "key": "Rett til dataportabilitet",
                            "text": "Brudd på rett til å få utlevert eller flyttet personopplysninger til en annen virksomhet."
                        },
                        {
                            "key": "Rett til å protestere",
                            "text": "Brudd på retten til å protestere mot en behandling av personopplysninger."
                        },
                        {
                            "key": "Manglende databehandleravtale",
                            "text": "Eksterne leverandører og ev. underleverandører behandler personopplysninger for NAV, uten at det er inngått en skriftlig databehandleravtale."
                        },
                        {
                            "key": "Databehandler følger ikke avtalens instrukser",
                            "text": "Brudd på avtalens instrukser om behandling av personopplysninger"
                        },
                        {
                            "key": "Manglende gyldig overføringsgrunnlag",
                            "text": "Brudd på kravene til gyldig overføringsgrunnlag for å overføre personopplysninger til et tredjeland (land utenfor EUEØS)."
                        },
                        {
                            "key": "Brudd på NAV's retningslinjer og prinsipper",
                            "text": "Brudd knyttet til at NAV sine retningslinjer og prinsipper for overføring av personopplysninger ikke er blitt fulgt."
                        },
                        {
                            "key": "Det er ikke fastsatt lagringstid",
                            "text": "Det er ikke vurdert hvor lenge personopplysningene skal lagres. Det er ikke vurdert om personopplysningene skal bevares eller kasseres."
                        },
                        {
                            "key": "Det er ikke rutiner for sletting/personopplysningene slettes ikke",
                            "text": "Det er fastsatt lagringstider, men ikke etablert rutiner som sikrer at personopplysningene faktisk slettes."
                        },
                        {
                            "key": "Behandlingen er ikke registrert/oppdatert i Behandlingskatalogen",
                            "text": "Behandlingskatalogen er NAVs protokoll over behandlingsaktiviteter. Katalogen skal til enhver tid være oppdatert med NAVs behandling av personopplysninger."
                        },
                        {
                            "key": "Ikke gjennomført vurdering av personvernkonsekvenser (PVK)",
                            "text": "Brudd på kravet om at PVK skal gjennomføres ved høy risiko for personvernet. "
                        },
                        {
                            "key": "Tiltak fra vurdering av personvernkonsekvenser ikke fulgt opp",
                            "text": "Tiltak som er satt i PVK skal gjennomføres innen fastsatte frister."
                        },
                        {
                            "key": "Dokumentasjon av etterlevelseskrav ikke gjennomført",
                            "text": "Personvernkrav skal etterleves og dokumenteres."
                        },
                        {
                            "key": "Kameraovervåkning på arbeidsplass",
                            "text": "Det foretas kameraovervåking på arbeidsplass som er ulovlig eller ulovlig lagring av kameraopptak. "
                        },
                        {
                            "key": "Publisering av bilder, lyd- og videoopptak",
                            "text": "Arbeidsgiver, brukere eller andre publiserer ulovlig bilder, lyd- eller videopptak på nettsider, media o.l."
                        },
                        {
                            "key": "Uberettiget innsyn i arbeidstakers e-postkasse, private filer mm.",
                            "text": "Arbeidsgiver foretar innsyn i ansattes e-post kasse, private filer mv. som ikke er berettiget, krav til innsynsprosedyrer ikke fulgt mv."
                        },
                        {
                            "key": "Ulovlig overvåkning/kontroll av ansatte",
                            "text": "Det foretas f.eks. ulovlig produksjonskontroll, overvåking telefonbruk, sporing m.m. av ansatte som er ulovlig."
                        },
                        {
                            "key": "Annet",
                            "text": "Ev. andre brudd knyttet til krav behandlingsgrunnlag."
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "removefrombreadcrumbs": "true"
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.values.categoryDetails",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "addtobreadcrumbs": "state.values.categoryDetails"
                }
            ]
        },
        {
            "key": 4,
            "type": "Input",
            "fields": [
                {
                    "key": "unit",
                    "label": "Hvilken enhet gjelder avviket?",
                    "type": "ChoiceGroup",
                    "options": [
                        "Min enhet",
                        "Annen enhet"
                    ],
                    "required": "true",
                    "defaultValue": "Min enhet",
                    "disabledOptions": [
                        "Annen enhet"
                    ],
                    "additionalData": [
                        {
                            "key": "Min enhet",
                            "value": "context.unit"
                        }
                    ]
                },
                {
                    "key": "unitOther",
                    "label": "Hvis annen enhet: Velg enhet",
                    "type": "Choice",
                    "options": [
                        "Enhet 1",
                        "Enhet 2"
                    ],
                    "hidden": "!(state.values.unit === 'Annen enhet')",
                    "required": "state.values.unit === 'Annen enhet'"
                },
                {
                    "key": "timeOfIncident",
                    "label": "Når skjedde avviket?",
                    "type": "Date",
                    "required": "true"
                },
                {
                    "key": "timeOfDiscovery",
                    "label": "Når ble avviket oppdaget?",
                    "type": "Date",
                    "required": "true"
                },
                {
                    "key": "incidentDescription",
                    "label": "Hva har skjedd? Beskriv avviket, mulig årsak og eventuelle konsekvenser",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                },
                {
                    "key": "imediateMeasuresDescription",
                    "label": "Beskriv eventuelle iverksatte strakstiltak:",
                    "type": "Text",
                    "multiline": "true"
                },
                {
                    "key": "measureSuggestionsDescription",
                    "label": "Har du forslag til tiltak for å unngå at noe slikt skjer igjen?",
                    "type": "Text",
                    "multiline": "true",
                    "required": "true"
                }
            ],
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    },
                    "removefrombreadcrumbs": "true"
                },
                {
                    "key": "next",
                    "label": "Neste",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronRight"
                    },
                    "iconPosition": "right",
                    "disabled": "!state.valid || !context.unit",
                    "invoke": {
                        "functionName": "NextPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                }
            ]
        },
        {
            "key": 5,
            "title": "Verifiser opplysningene som er registrert",
            "type": "Summary",
            "values": "state.values",
            "actions": [
                {
                    "key": "previous",
                    "label": "Tilbake",
                    "type": "default",
                    "iconProps": {
                        "iconName": "ChevronLeft"
                    },
                    "invoke": {
                        "functionName": "PreviousPage",
                        "params": {
                            "state_pageNumber": "currentPageNumber",
                            "setstate": "currentPageNumber"
                        }
                    }
                },
                {
                    "key": "submit",
                    "label": "Send inn",
                    "type": "primary",
                    "disabled": "!state.summaryConfirmed",
                    "invoke": {
                        "functionName": "Submit",
                        "params": {
                            "state_values": "values",
                            "context_formSubmitURL": "formSubmitURL",
                            "setstate": "submitting",
                            "resultVariable": "submitResult"
                        }
                    }
                }
            ]
        }
    ]
}